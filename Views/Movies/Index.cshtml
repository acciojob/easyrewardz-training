@model MVCTestApp.Controllers.MyViewModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>@TempData["obj"]</h1>


<div>
    

    <div class="container">
        <div>
        @if(ViewData.ModelState["name"]?.Errors?.Count>0){
            <div class="text-danger">
                @ViewData.ModelState["name"].Errors[0].ErrorMessage
                </div>
        }
        </div>
        <div class="row pt-4 pb-3">
            <div class="col-6">
            <h2 class="text-primary">
                Movies
            </h2>
                <h4>@ViewData["success"]</h4>
            </div>
       
        <div class="col-6 text-end">
            <a asp-controller="Movies" asp-action="Create" class="btn btn-primary">Create Movie</a>
        </div>
        </div>
    </div>
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Movie Name</th>
                <th>Director Name</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Movies)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>@item.Director</td>
                    <td>
                        <div >
                            <a asp-controller="Movies" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary mx-2">Edit</a>
                            <a asp-controller="Movies" asp-action="Delete" asp-route-id="@item.Id"  class="btn btn-delete mx-2">Delete</a>
                        </div>

                    </td>
                </tr>
               
            }
        </tbody>
    </table>
